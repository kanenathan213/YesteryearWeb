.benefit-section
  clearfix()
  center(980px)

.pre-launch-message
  color white
  font-style italic
  font-size 2.5rem
  padding 5%
  @media only screen and (min-width : medium)
    font-size 1.2rem
    text-align right

.ben
  column('1/1')
  text-align center
  color white
  position relative
  min-height 30vh
  @media only screen and (min-width : medium)
    min-height 300px
  &.ben1
    background url(https://s3-us-west-2.amazonaws.com/yesteryear-images/louvre.jpg)
    background-size cover
    background-repeat no-repeat
    background-position-y center
    .benefit-writing
      @media only screen and (min-width : medium)
        text-align left
  &.ben2
    background url(https://s3-us-west-2.amazonaws.com/yesteryear-images/people-hand-iphone-smartphone.jpg)
    background-repeat no-repeat
    background-size cover
    .benefit-writing
      @media only screen and (min-width : medium)
        text-align center

  &.ben3
    background url(https://s3-us-west-2.amazonaws.com/yesteryear-images/colusseum.jpg)
    background-size cover
    background-repeat no-repeat
    background-position-y center
    .benefit-writing
      @media only screen and (min-width : medium)
        text-align right

  .benefit-img-overlay,
  .benefit-img-overlay-2
    top 0
    left 0
    height 100%
    position absolute
    width 100%
    z-index 0
  .benefit-writing
    font-size 3rem
    height 100%
    left 0
    position absolute
    padding 12rem 1rem
    width 100%
    z-index 1
    @media only screen and (min-width : medium)
      font-size 1.5rem
      padding 7rem 1rem

.benefit-img-overlay
      background-image linear-gradient(to right, rgba(dark-blue, 1) 2%, rgba(dark-blue, 0.1), rgba(dark-blue, 1) 98%)

.benefit-img-overlay-2
      background-image linear-gradient(to bottom, rgba(dark-blue, 1) 2%, rgba(dark-blue, 0.1), rgba(dark-blue, 1) 98%)

.intro-header
  background url(./images/angkor.jpg)
  background-repeat no-repeat
  background-size cover
  min-height 40vh
  position relative
  width 100%
  @media only screen and (min-width : medium)
    min-height 65vh
    background-position 0 60%

.hero-img-overlay
  background-color hsla(black 0.5)
  height 100%
  position absolute
  width 100%

.intro-header-content-wrap
  bottom 10%
  text-align center
  position absolute
  width 100%
  @media only screen and (min-width : medium)
    bottom 5%

.intro-header-content
  clearfix()
  center(980px)

.logo-wrap
  column('1/1')
  text-align center
  z-index 1
  @media only screen and (min-width : medium)
    column('1/2')
    text-align left

.logo-name
  color white
  font-family 'sirin', sans-serif
  font-size 6rem
  line-height 6.5rem

.logo-tagline
  color rgba(white 0.5)
  font-family 'Nunito-Bold', sans-serif
  font-size 3rem
  line-height 3.2rem
  @media only screen and (min-width : medium)
    font-size 2rem

.index-cta-wrap
  column('1/1')
  margin-top 5%
  @media only screen and (min-width : medium)
    column('1/2')

.view-tour-list-button
  background-image linear-gradient(to bottom, lighten(red, 40%), red)
  border 0
  border-radius 10px
  box-shadow: inset 1px 1px 0 rgba(255,255,255,0.1),2px 2px 6px rgba(0,0,0,0.4)
  color white
  display inline-block
  padding 2rem 3rem
  text-shadow 0 -1px 0 rgba(0,0,0,0.2)
  transition transform 0.2s ease-out
  @media only screen and (min-width : medium)
    padding 1rem 1.5rem
  &:hover,
  &:focus
    background-image linear-gradient(to bottom, lighten(red, 50%), lighten(red, 10%))
    border-radius 10px
    transform scale(1.05, 1.05)
    transform-origin center
  &:active
    background-image linear-gradient(to bottom, lighten(red, 20%), red)
    outline-width 0
    transform scale(.95, .95)
  .login-label
    display inline-block
    font-size 2.5rem
    vertical-align baseline
    @media only screen and (min-width : medium)
      font-size 1.3rem
