// Import all partials
@require './_*.styl'

body
  background dark-blue
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-family 'Nunito-Regular', sans-serif
  font-size 1rem

header.top
  text-align center
  h1
    font-size 14.4rem
    line-height 0.7 // this font has a wacky baseline
    display flex
    justify-content: center;
  h3
    margin 0
    font-size 2rem
    color orange
    position relative
    display inline-block
    span
      background white
      position relative
      z-index 2
      padding-left 1rem
      padding-right 1rem
    &:before, &:after
      display block
      z-index 1
      background black
      position absolute
      width 130%
      height 1px
      content ''
      top 5px
      margin-left -15%
    &:after
      top auto
      bottom 7px

.heyday
  max-height 90vh
  max-width 850px
  margin 0 auto
  margin-top 5vh

  & > *
    padding 2rem
    position relative
    overflow scroll

button, input[type=submit] // for auth
  background none
  border 1px solid black
  font-size 1.5rem
  font-family 'nunito_regular'
  position relative
  z-index 2
  &[disabled]
    color red
    background white
    border-color red
    &:hover
      color red
      cursor not-allowed
    &:after
      display none
  &:after
    content ''
    z-index -1
    display block
    background black
    position absolute
    width 100%
    height 0%
    left 0
    top 0

  // variants
  &.warning
    &:after
      background red
  &.success
    &:after
      background green

  &.facebook-login
    background-image linear-gradient(to bottom, lighten(#3864A3, 40%), #3864A3)
    border 0
    border-radius 10px
    bottom 10%
    box-shadow: inset 1px 1px 0 rgba(255,255,255,0.1),2px 2px 6px rgba(0,0,0,0.4)
    color white
    padding 1rem 1.5rem
    position absolute
    right 10%
    text-align center
    text-shadow 0 -1px 0 rgba(0,0,0,0.2)
    transition transform 0.2s ease-out
    @media only screen and (min-width : medium)
      bottom 15%
      right 30%

    &:hover,
    &:focus
      background-image linear-gradient(to bottom, lighten(#3864A3, 50%), lighten(#3864A3, 10%))
      border-radius 10px
      transform scale(1.05, 1.05)
      transform-origin center
    &:active
      transform scale(.9, .9)
      background-image linear-gradient(to bottom, lighten(#3864A3, 20%), #3864A3)

.intro-header
  background url(./images/inside_columns.jpeg)
  background-repeat no-repeat
  background-size cover
  min-height 40vh
  position relative
  width 100%
  @media only screen and (min-width : medium)
    min-height 65vh
    background-position 0 60%

.hero-img-overlay
    position absolute
    width 100%
    height 100%
    background-color hsla(black 0.5)

.logo-wrap
    bottom 5%
    left 5%
    position absolute
    z-index 1
    @media only screen and (min-width : medium)
      left 20%

.logo-name
  color white
  font-family 'sirin', sans-serif
  font-size 8rem
  line-height 8.5rem

.logo-tagline
  color rgba(white 0.5)
  font-family 'Nunito-Bold', sans-serif
  font-size 3rem
  line-height 3.2rem
  @media only screen and (min-width : medium)
    font-size 2rem

.benefit-statement
    position absolute
    z-index 2
    top 10%
    font-family 'Nunito-Bold', sans-serif
    font-size 3rem
    line-height 3.3rem
    text-align center
    width 100%
    padding 0 5%
    @media only screen and (min-width : medium)
      font-size 2rem
      top 20%

.benefit
  height 25vh
  position relative
  width 100%
  @media only screen and (min-width : medium)
    max-width 700px
    height 400px

  &.benefit-1
    background url(./images/louvre.jpg)
    background-size cover
    background-repeat no-repeat
    @media only screen and (min-width : medium)
      margin 2% 40% 2% auto

  &.benefit-2
    background url(./images/people-hand-iphone-smartphone.jpg)
    background-size cover
    background-repeat no-repeat
    @media only screen and (min-width : medium)
      margin 2% auto

  &.benefit-3
    background url(./images/colusseum.jpg)
    background-size cover
    background-repeat no-repeat
    @media only screen and (min-width : medium)
      margin 2% auto 2% 40%

  .benefit-img-overlay,
  .benefit-img-overlay-2
    position absolute
    width 100%
    height 100%

.benefit-img-overlay
  background-image linear-gradient(to right, rgba(dark-blue, 1) 2%, rgba(dark-blue, 0.2), rgba(dark-blue, 1) 98%)

.benefit-img-overlay-2
  background-image linear-gradient(to bottom, rgba(dark-blue, 1) 2%, rgba(dark-blue, 0.2), rgba(dark-blue, 1) 98%)

.benefit-statement
  color white

.login-label
  display inline-block
  padding-left 20px
  font-size 2.5rem
  vertical-align text-bottom
  @media only screen and (min-width : medium)
    font-size 1.3rem
    padding-left 10px
    vertical-align text-top

.login-icon
  display inline-block
  padding-right 20px
  border-right 1px solid rgba(white,0.5)
  font-size 3.5rem
  @media only screen and (min-width : medium)
    font-size 1.7rem
    padding-right 10px

.tour-wrap
  border-radius 10px
  box-shadow 0px 5px 5px rgba(black 0.1)
  position relative
  margin 2% auto
  max-width 400px
  max-height 300px
  overflow hidden
  transition transform 0.3s ease-out

  &:hover,
  &:focus
    cursor pointer
    transform scale(1.02, 1.02)
    transform-origin center

.tour-overlay
  background-color rgba(black 0.5)
  height 100%
  position absolute
  top 0
  width 100%

.tour-thumbnail {
  width 100%
}

.tour-name {
  color white
  font-size 2.5rem
  font-weight bolder
  z-index 2
  position absolute
  bottom 10%
  width 100%
  text-align center
  left 0

}
