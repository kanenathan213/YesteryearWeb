// Import all partials
@require './_*.styl'

body
  background dark-blue
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-family 'Nunito-Regular', sans-serif
  font-size 1rem

header.top
  text-align center
  h1
    font-size 14.4rem
    line-height 0.7 // this font has a wacky baseline
    display flex
    justify-content: center;
  h3
    margin 0
    font-size 2rem
    color orange
    position relative
    display inline-block
    span
      background white
      position relative
      z-index 2
      padding-left 1rem
      padding-right 1rem
    &:before, &:after
      display block
      z-index 1
      background black
      position absolute
      width 130%
      height 1px
      content ''
      top 5px
      margin-left -15%
    &:after
      top auto
      bottom 7px

.heyday
  display flex
  height 90vh
  max-width:1500px
  margin 0 auto
  margin-top 5vh

  & > *
    flex 1 4 auto
    padding 2rem
    border 1rem double lighten(black,10%)
    position relative
    background white
    transition all 0.3s
    box-shadow 0px 5px 5px rgba(0,0,0,0.1)
    overflow scroll

button, input[type=submit] // for auth
  text-transform uppercase
  background none
  border 1px solid black
  font-weight 600
  font-size 1.5rem
  font-family 'Open Sans'
  transition all 0.2s
  position relative
  z-index 2
  &[disabled]
    color red
    background white
    border-color red
    &:hover
      color red
      cursor not-allowed
    &:after
      display none
  &:after
    content ''
    z-index -1
    display block
    background black
    position absolute
    width 100%
    height 0%
    left 0
    top 0
    transition all 0.2s
  &:hover, &:focus
    color white
    outline 0
    &:after
      height 100%
  // variants
  &.warning
    &:after
      background red
  &.success
    &:after
      background green

  &.github, &.facebook, &.twitter
    border 0
    display block
    margin-bottom 2rem
    width 100%
    color white
    padding 2rem

  &.github
    background #82D465
    &:after
      background darken(#82D465, 20%)

  &.facebook
    background #3864A3
    &:after
      background darken(#3864A3, 20%)

  &.twitter
    background #5EA9DD
    &:after
      background darken(#5EA9DD, 20%)

.intro-header
  background url(./images/inside_columns.jpeg)
  background-repeat no-repeat
  background-size cover
  min-height 40vh
  position relative
  width 100%
  @media only screen and (min-width : 992px)
    min-height 55vh
    background-position 0 20%

.hero-img-overlay
    position absolute
    width 100%
    height 100%
    background-color hsla(blue 0.7)

.logo-wrap
    bottom 5%
    left 5%
    position absolute
    z-index 1
    @media only screen and (min-width : medium)
      left 20%

.logo-name
  color white
  font-family 'sirin', sans-serif
  font-size 8rem
  line-height 8.5rem

.logo-tagline
  color rgba(white 0.7)
  font-family 'Nunito-Bold', sans-serif
  font-size 3rem
  line-height 3.2rem

.benefit-statement
    position absolute
    z-index 2
    top 10%
    font-size 4rem
    line-height 4.3rem
    text-align center
    width 100%
    padding 0 5%
    font-family 'Nunito-Bold', sans-serif
    @media only screen and (min-width : medium)
      font-size 2rem

.benefit
  height 25vh
  position relative
  width 100%
  @media only screen and (min-width : medium)
    max-width 700px
    margin 2% auto
    height 400px

  &.benefit-1
    background url(./images/louvre.jpg)
    background-size cover
    background-repeat no-repeat

    .benefit-img-overlay
      background-image linear-gradient(to left, rgba(dark-blue, 1), rgba(dark-blue, 0.6), rgba(dark-blue, 1))

    .benefit-statement
      color white

  &.benefit-2
    background url(./images/people-hand-iphone-smartphone.jpg)
    background-size cover
    background-repeat no-repeat

    .benefit-img-overlay
      background-image linear-gradient(to left, rgba(dark-blue, 1), rgba(dark-blue, 0.6), rgba(dark-blue, 1))

    .benefit-statement
      color white

  &.benefit-3
    background url(./images/colusseum.jpg)
    background-size cover
    background-repeat no-repeat

    .benefit-statement
      color white


    .benefit-img-overlay
      background-image linear-gradient(to left, rgba(dark-blue, 1), rgba(dark-blue, 0.6), rgba(dark-blue, 1))

  .benefit-img-overlay
    position absolute
    width 100%
    height 100%
