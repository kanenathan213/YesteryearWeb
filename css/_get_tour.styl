.single-tour-wrap
  display flex
  flex-direction column
  align-items center
  font-size 2rem
  @media only screen and (min-width : large)
    font-size 1.5rem

.get-tour-title
  margin-top: 20px

.get-tour-description
  padding 0 5%
  font-size 1.7rem
  @media only screen and (min-width : large)
    font-size 1.5rem

.get-tour-button
  background rgba(360,360,360,0.2)
  border-radius 20px
  border 1px solid rgba(360,360,360,0.3)
  color white
  display inline-block
  font-size 5rem
  padding 7% 14%
  margin 5vh auto
  transition background 0.25s ease-out
  outline 0
  text-decoration none
  &:hover
    background rgba(360,360,360,0.4)
    cursor pointer
  &:focus, &:active
    outline 0
  @media only screen and (min-width : large)
    font-size 1.5rem
    padding 20px 25px
    border-radius 10px
